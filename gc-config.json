{
    "exclude_namespaces": [
        "kube-system",
        "default",
        "external-secrets",
        "ingress-nginx-private",
        "ingress-nginx-public",
        "monitoring",
        "namespace-configurator",
        "tekton-pipelines",
        "velero"
    ],
    "exclude_namespace_suffixes": [
        "-dev",
        "-prod",
        "-staging"
    ],
    "secret_cleanup_prefixes": [
        "git-",
        "dhops-",
        "vars-",
        "creds-",
	"build-",
	"config-"
    ],
    "service_account_cleanup_prefixes": [
        "git-",
        "dhops-"
    ],
    "cleanup_older_than_days": 1
}
